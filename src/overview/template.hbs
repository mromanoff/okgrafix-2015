<div id="hero" class="owl-carousel owl-theme">
    {{#each heroImages}}
        <div class="item">
            <picture>
                <!-- Add Fallback for IE9 -->
                <!--[if IE 9]><video style="display: none;"><![endif]-->
                <source srcset="{{small}}" media="(max-width: 768px)">
                <source srcset="{{medium}}" media="(max-width: 1280px)">
                <source srcset="{{large}}" media="(max-width: 1920px)">
                <!--[if IE 9]></video><![endif]-->
                <img srcset="{{small}}" alt="{{alt}}" />
            </picture>
        </div>
    {{/each}}
</div>


